<%- include("../layouts/header"); -%>

<main class="container">

    <h2>Products list View</h2>

    <% if (produtos.length > 0) { %>

    <% produtos.forEach(prods => { %>
    <div class="card" style="width: 18rem;">
        <img src="<%= prods.imageURL %> " class="card-img-top" alt="<%= prods.title %> ">
        <div class="card-body">
            <h5 class="card-title"><%= prods.title %> </h5>
            <h5 class="card-title">$ <%= prods.price %> </h5>
            <p class="card-text"><%= prods.description %></p> </p>
            
            <!-- botoes de acao -->
            <a href="/products/<%= prods.id %> " class="form-group btn btn-info">Details</a>
            <form action="/add-to-cart" method="POST">
                <button class="form-group btn btn-success">Go to Cart</button>
            </form>
        </div>
    </div>
    <% }) %>

    <% } else { %>
<h4>No books found</h4>
    <% } %> 

</main>

<%- include("../layouts/footer"); -%>